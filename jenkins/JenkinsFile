pipeline {
    agent any 
    environment {
        def branch = "${env.GIT_BRANCH}"
    }
    stages {
        stage("build") {
            steps {
                sh "echo ${branch}"
                sh "mkdir vb-invest-ui"
                dir("vb-invest-ui")
                deleteDir()
                sh "git clone https://github.com/amitPrasadGithub/vb-invest-ui.git"
                dir ("vb-invest-ui")
                sh "npm install"
                sh "ng build --configuration=production"
            }
        }
    }
}
